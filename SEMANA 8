import os
import subprocess

def mostrar_codigo(ruta_script):
    """
    Lee y muestra el contenido de un archivo .py en la terminal.
    
    Args:
        ruta_script (str): Ruta relativa o absoluta del archivo a leer.
    Returns:
        str: El contenido del código si se lee con éxito, de lo contrario None.
    """
    ruta_script_absoluta = os.path.abspath(ruta_script)
    try:
        with open(ruta_script_absoluta, 'r', encoding='utf-8') as archivo:
            codigo = archivo.read()
            print(f"\n{'='*50}")
            print(f" MOSTRANDO: {os.path.basename(ruta_script)}")
            print(f"{'='*50}\n")
            print(codigo)
            return codigo
    except FileNotFoundError:
        print("Error: El archivo no se encontró.")
        return None
    except Exception as e:
        print(f"Ocurrió un error al leer el archivo: {e}")
        return None

def ejecutar_codigo(ruta_script):
    """
    Ejecuta el script de Python seleccionado en una nueva ventana de terminal.
    
    Args:
        ruta_script (str): Ruta del archivo a ejecutar.
    """
    try:
        if os.name == 'nt':  # Windows
            subprocess.Popen(['cmd', '/k', 'python', ruta_script])
        else:  # Unix-based systems (Linux/Mac)
            # Intenta usar gnome-terminal o xterm según disponibilidad
            subprocess.Popen(['xterm', '-hold', '-e', 'python3', ruta_script])
    except Exception as e:
        print(f"Ocurrió un error al ejecutar el código: {e}")

def mostrar_menu():
    """
    Menú principal que permite navegar entre las diferentes unidades del curso.
    """
    # Detecta la ruta del directorio donde se encuentra este archivo
    ruta_base = os.path.dirname(__file__)

    unidades = {
        '1': 'Unidad 1',
        '2': 'Unidad 2'
    }

    while True:
        print("\n" + "*"*30)
        print("  MENU PRINCIPAL - DASHBOARD")
        print("*"*30)
        
        for key in unidades:
            print(f"{key} - {unidades[key]}")
        print("0 - Salir")

        eleccion_unidad = input("\nElige una unidad o '0' para salir: ")
        
        if eleccion_unidad == '0':
            print("Saliendo del Dashboard. ¡Hasta pronto!")
            break
        elif eleccion_unidad in unidades:
            ruta_unidad = os.path.join(ruta_base, unidades[eleccion_unidad])
            # Verificar si la carpeta de la unidad existe
            if os.path.exists(ruta_unidad):
                mostrar_sub_menu(ruta_unidad)
            else:
                print(f"\n[!] Error: La carpeta '{unidades[eleccion_unidad]}' no existe en el directorio actual.")
        else:
            print("Opción no válida. Por favor, intenta de nuevo.")

def mostrar_sub_menu(ruta_unidad):
    """
    Muestra las subcarpetas (temas) dentro de una unidad seleccionada.
    """
    # Listar solo directorios dentro de la unidad
    sub_carpetas = [f.name for f in os.scandir(ruta_unidad) if f.is_dir()]

    if not sub_carpetas:
        print("\nNo se encontraron subcarpetas en esta unidad.")
        return

    while True:
        print(f"\n--- SUBMENÚ: {os.path.basename(ruta_unidad)} ---")
        for i, carpeta in enumerate(sub_carpetas, start=1):
            print(f"{i} - {carpeta}")
        print("0 - Regresar al menú principal")

        eleccion_carpeta = input("\nElige una subcarpeta o '0' para regresar: ")
        
        if eleccion_carpeta == '0':
            break
        else:
            try:
                indice = int(eleccion_carpeta) - 1
                if 0 <= indice < len(sub_carpetas):
                    mostrar_scripts(os.path.join(ruta_unidad, sub_carpetas[indice]))
                else:
                    print("Opción fuera de rango.")
            except ValueError:
                print("Por favor, ingresa un número válido.")

def mostrar_scripts(ruta_sub_carpeta):
    """
    Lista los scripts de Python (.py) disponibles en la carpeta seleccionada
    y permite al usuario visualizarlos o ejecutarlos.
    """
    scripts = [f.name for f in os.scandir(ruta_sub_carpeta) if f.is_file() and f.name.endswith('.py')]

    if not scripts:
        print("\nNo se encontraron scripts .py en esta carpeta.")
        return

    while True:
        print(f"\n--- SCRIPTS EN: {os.path.basename(ruta_sub_carpeta)} ---")
        for i, script in enumerate(scripts, start=1):
            print(f"{i} - {script}")
        print("0 - Regresar al submenú anterior")
        print("9 - Regresar al menú principal")

        eleccion_script = input("\nElige un script: ")
        
        if eleccion_script == '0':
            break
        elif eleccion_script == '9':
            return "ir_principal" # Señal para retornar niveles
        else:
            try:
                indice = int(eleccion_script) - 1
                if 0 <= indice < len(scripts):
                    ruta_script = os.path.join(ruta_sub_carpeta, scripts[indice])
                    codigo = mostrar_codigo(ruta_script)
                    
                    if codigo:
                        ejecutar = input("\n¿Desea ejecutar el script? (1: Sí, 0: No): ")
                        if ejecutar == '1':
                            ejecutar_codigo(ruta_script)
                        
                        input("\nPresiona Enter para continuar...")
                else:
                    print("Opción fuera de rango.")
            except ValueError:
                print("Entrada no válida.")

# Punto de entrada del programa
if __name__ == "__main__":
    mostrar_menu()
